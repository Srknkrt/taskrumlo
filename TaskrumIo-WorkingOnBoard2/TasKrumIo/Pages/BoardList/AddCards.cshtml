@page
@model TasKrumIo.Pages.BoardList.AddCardsModel

@{
    ViewData["Title"] = "AddCards";
}
<div class="container mt-5 ">

    <h1 class="main-text text-center">Add A Card</h1>
    <hr />




    <div class="row">
        <div class="col-md-4">
            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label  asp-for="Cards.CardName" class="control-label" style=" color:#744cca;font-size:20px "></label>
                    <input asp-for="Cards.CardName" class="form-control" />
                    <span asp-validation-for="Cards.CardName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Create" class="btn" style="background-color:#744cca; color:#fff" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a class="btn" asp-page="Index" style="background-color:#744cca; color:#fff">Back to List</a>
    </div>



</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
