@page
@model TasKrumIo.Pages.BoardList.CreateNewBoardModel

@{
    ViewData["Title"] = "CreateNewBoard";
}
<div class="container mt-5">
    <h1 class="main-text text-center">Create A New Board</h1>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <h4 style=" color:#6942bd; font-size:20px;"> Board Name </h4>
                    <input asp-for="Board.BoardName" class="form-control" />
                    <span asp-validation-for="Board.BoardName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Create" class="btn " style="color:#fff ; background-color:#6942bd"/>
                </div>
            </form>
        </div>
    </div>

    <div>
        <a class="btn" style="background-color:#9172d3; color:#fff" asp-page="BoardList">Back to List</a>
    </div>

</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
