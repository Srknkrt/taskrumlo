@page
@model TasKrumIo.Pages.BoardList.DeleteBoardModel

@{
    ViewData["Title"] = "DeleteBoard";
}
<div class="container mt-5">

    <h1 class="main-text text-center">Delete A Board</h1>

    <h3 class="second-text text-center">Are you sure you want to delete this Board?</h3>
    <div>
        
        <hr />
        <dl class="row">
            <dt class="col-sm-2 ">
                <h4 style=" color:#6942bd; font-size:20px;">Board Name: </h4>
            </dt>
            <dd class="col-sm-10">
                <p class="paragraph-text" style=" color:#6942bd;font-weight:bold; font-size:17px;">  @Html.DisplayFor(model => model.Board.BoardName)</p> 
            </dd>
        </dl>

        <form method="post">
            <input type="hidden" asp-for="Board.Id" />
            <input type="submit" value="Delete" class="btn " style="background-color:#6942bd ; color:#fff" /> |
            <a class="btn " style="background-color:#9177ca ; color:#fff" asp-page="BoardList">Back to List</a>
        </form>
    </div>

</div>
