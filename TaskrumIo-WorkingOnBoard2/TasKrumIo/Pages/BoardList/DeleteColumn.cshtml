@page
@model TasKrumIo.Pages.BoardList.DeleteColumnModel

<div class="container">

    <h1>Delete Column</h1>

    <h3>Are you sure you want to delete this?</h3>
    <div>
        <h4>Column</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                <h4 class="text-secondary">Column Name</h4>
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Columns.ColumnName)
            </dd>
        </dl>

        <form method="post">
            <input type="hidden" asp-for="Columns.Id" />
            <input type="submit" value="Delete" class="btn btn-danger" /> |
            <a asp-page="BoardList">Back to List</a>
        </form>
    </div>
</div>
