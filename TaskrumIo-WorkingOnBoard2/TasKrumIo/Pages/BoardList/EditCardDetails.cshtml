@page
@model TasKrumIo.Pages.BoardList.EditCardDetailsModel

@{
    ViewData["Title"] = "EditCardDetails";
}

<div class="container mt-5">
<h1>Edit Card Details</h1>


<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Cards.Id" />
            <div class="form-group">
                <label asp-for="Cards.CardName" class="control-label"></label>
                <input asp-for="Cards.CardName" class="form-control" />
                <span asp-validation-for="Cards.CardName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Cards.CardContents.CardContent" class="control-label"></label>
                <textarea asp-for="Cards.CardContents.CardContent" class="form-control input-group-lg " /></textarea>
                <span asp-validation-for="Cards.CardContents.CardContent" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Save" class="btn "style="background-color:#9172d3; color:#fff" />
            </div>
            <div class="form-group">
                <a asp-page="AddCardContent" class="btn " style="background-color:#9172d3; color:#fff" asp-route-id="@Model.Cards.Id">Add Card Content</a>
            </div>
            <div class="form-group">
                
            </div>
        </form>
    </div>
</div>

<div>
    <a class="btn" style="background-color:#9172d3; color:#fff" asp-page="BoardList">Back to List</a>
</div>

</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
